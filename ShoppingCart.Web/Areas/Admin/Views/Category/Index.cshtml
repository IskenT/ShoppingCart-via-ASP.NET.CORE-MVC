@model ShoppingCart.DataAccess.ViewModels.CategoryVM

@{
    ViewData["Title"] = "Index";
}
<div class = "container p-4">
    <div class="row p-3">
        <div class="col-6">
            <h2 class="text-primary">List of Categories</h2>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-primary" asp-action="CreateUpdate" asp-controller="Category"><i class="bi bi-plus-circle"></i>&nbsp;Create New Category</a>
        </div>
    </div>
</div>
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <tr>
            <th class="text-dark">Category Name</th>
            <th class="text-dark">Display Order</th>
            <th class="text-dark">Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.categories) {
    <tr>
            <td>@item.Name</td>
            <td>@item.DisplayOrder</td>
            <td role="group">
                <a asp-action="CreateUpdate" asp-controller="category" asp-route-id="@item.Id"><i class="bg bi-pencil-square"></i>Edit</a>
                <a asp-action="Delete" asp-controller="category" asp-route-id="@item.Id"><i class="bg bi-trash"></i>Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
